<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rkssport.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quotes"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-22dp"
            android:fontFamily="@font/montserrat_subrayada"
            android:text="#Qoutes" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/quotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_above="@+id/id_gallery"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="110dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/body"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/montserrat_subrayada"
            android:text="#Body Building" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quotes"
            android:id="@+id/body"
            >

        </android.support.v7.widget.RecyclerView>

        //awalnya
        <android.support.v7.widget.CardView
            android:layout_below="@+id/body"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="130dp"
            app:cardCornerRadius="50dp">



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scrollbars="none" >
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/id_gallery"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_alignStart="@+id/card_view"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="164dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="153dp"
                    android:layout_marginBottom="31dp"
                    android:fontFamily="@font/montserrat_subrayada_bold"
                    android:text="WORKOUT" />

                <android.support.v7.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/card">

                    <TextView
                        android:id="@+id/beginer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="48dp"
                        android:fontFamily="@font/montserrat_subrayada"
                        android:text="#Beginer" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:id="@+id/recyclerview">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>

                //advance
                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="59dp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/advance"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="48dp"
                        android:fontFamily="@font/montserrat_subrayada"
                        android:text="#Advance" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>

                //expert
                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="59dp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/expert"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="48dp"
                        android:fontFamily="@font/montserrat_subrayada"
                        android:text="#Expert" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>